<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_green_dao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入GreenDao测试界面"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_volley_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Volley测试界面"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_retrofit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入Retrofit测试界面"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_base_recycler_adapter_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入RecyclerView测试界面"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>